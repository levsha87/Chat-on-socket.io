<!DOCTYPE html>
<html>
  <head>
    <title>Socket.IO chat</title>
    <!-- <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.2.1/css/bootstrap.min.css"> -->
    <link rel="stylesheet" type="text/css" href="style.css" >
  </head>
  <body>
    <header>
      <h1>Чат</h1>
    </header>

    <section class="username">
      <form id="form_username">
        <input id="input_username" type="text" /><button type="submit">Изменить имя пользователя</button>
      </form>
    </section>

    <section id="chatroom">
      <ul id="messages"></ul>
      <div id="state"></div>
    </section>

    
    <form id="form_message" action="">
      <input id="input_message" autocomplete="off" /><button type="submit">Send</button>
    </form>
    <script src="/socket.io/socket.io.js"></script>
    <script src="chat.js"></script>
  </body>
</html>